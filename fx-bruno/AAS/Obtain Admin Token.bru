meta {
  name: Obtain Admin Token
  type: http
  seq: 1
}

post {
  url: http://keycloak:8080/realms/dsp-native-basyx/protocol/openid-connect/token
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  client_id: dsp-native-basyx-client
  grant_type: password
  username: the.admin
  password: adminPassword
}

script:post-response {
  const adminToken = res.getBody()["access_token"];
  bru.setVar("basyx_admin_token", adminToken);
}

settings {
  encodeUrl: true
}
